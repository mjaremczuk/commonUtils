<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:animateLayoutChanges="true"
		android:orientation="vertical">
	<TextView android:id="@+id/field"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:hint="Wpisz numer kolczyka"
			android:padding="12dp"/>
	<LinearLayout android:id="@+id/keyboard"
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="horizontal"
			android:visibility="visible">
		<android.support.v7.widget.RecyclerView android:id="@+id/codes_list"
				android:layout_height="match_parent"
				android:layout_width="wrap_content"/>
		<TableLayout android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:shrinkColumns="true"
				android:stretchColumns="true">
			<TableRow android:layout_weight="3">
				<Button android:id="@+id/one"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:padding="0dp"
						android:layout_weight="1"
						android:text="1"
						app:layout_columnWeight="1"
						app:layout_row="0"
						app:layout_rowWeight="1"/>
				<Button android:id="@+id/two"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="2"

						app:layout_columnWeight="1"
						app:layout_row="0"
						app:layout_rowWeight="1"/>
				<Button android:id="@+id/three"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="3"
						app:layout_columnWeight="1"
						app:layout_row="0"
						app:layout_rowWeight="1"/>
			</TableRow>
			<TableRow android:weightSum="3">
				<Button android:id="@+id/four"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="4"
						android:layout_weight="1"
						app:layout_column="0"
						app:layout_columnWeight="1"
						app:layout_row="1"
						app:layout_rowWeight="1"/>
				<Button android:id="@+id/five"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="5"
						app:layout_columnWeight="1"
						app:layout_row="1"
						app:layout_rowWeight="1"/>
				<Button android:id="@+id/six"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="6"
						app:layout_columnWeight="1"
						app:layout_row="1"
						app:layout_rowWeight="1"/>
			</TableRow>
			<TableRow android:weightSum="3">
				<Button android:id="@+id/seven"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="7"
						android:layout_weight="1"
						app:layout_column="0"
						app:layout_columnWeight="1"
						app:layout_row="2"
						app:layout_rowWeight="1"/>
				<Button android:id="@+id/eight"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="8"
						android:layout_weight="1"
						app:layout_columnWeight="1"
						app:layout_row="2"
						app:layout_rowWeight="1"/>
				<Button android:id="@+id/nine"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="9"
						android:layout_weight="1"
						app:layout_columnWeight="1"
						app:layout_row="2"
						app:layout_rowWeight="1"/>
			</TableRow>
			<TableRow android:weightSum="3">
				<Button android:id="@+id/delete"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="DELETE"
						android:layout_weight="1"
						app:layout_column="0"
						app:layout_columnWeight="1"
						app:layout_row="3"
						app:layout_rowWeight="1"/>
				<Button android:id="@+id/zero"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="0"
						app:layout_columnWeight="1"
						app:layout_row="3"
						app:layout_rowWeight="1"/>
				<Button android:id="@+id/done"
						android:layout_weight="1"
						android:layout_height="wrap_content"
						android:layout_width="wrap_content"
						android:text="DONE"
						app:layout_columnWeight="1"
						app:layout_row="3"
						app:layout_rowWeight="1"/>
			</TableRow>
		</TableLayout>
